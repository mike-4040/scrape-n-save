<div class="container">
  <div class="row">
    <div class="col-md-2">
       <p><a href="/" type="button" class="btn btn-primary w-100">Home</a></p>
        <p><a href="/saved" type="button" class="btn btn-primary w-100">Saved Articles</a></p>
        <p><a href="/scrape" type="button" class="btn btn-success w-100">Scrape more</a></p>
        <p><a href="/clear" type="button" class="btn btn-warning w-100">Clear scrapped</a></p>
    </div>
    <div class="col-md-10">
      {{#each articles}}
        {{> articles/article-block}}
      {{/each}}
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="article-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="new-note" class="col-form-label">New note:</label>
            <textarea type="text" class="form-control" id="new-note" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="save-note" type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>

<script src="assets/js/index.js"></script>